// Online C compiler to run C program online
#include <stdio.h>
#include <math.h>
int main() {
    int powr(int, int);// prototype declaration
    int add(int, int );
    int sub(int x, int n);
    int x,n,ch;
    printf("enter choice");
    scanf("%d",&ch);
    printf("enter values for x, n");
    scanf("%d%d", &x,&n);
    switch(ch)
    {
        case 1:
          printf("%d power %d is %d\n",x,n,powr(x,n));
          break;
        case 2:
          printf("adding %d with %d gives %d",x,n,add(x,n));
          break;
        case 3:
          printf("%d",sub(x,n));
          break;  
    }
  return 0;
}//end of main
int powr(int x, int n)
{
    return(pow(x,n));
}
int add(int x, int n)
{
    return(x+n);
}
int sub(int x, int n)
{
    return(x-n);
}
